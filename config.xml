<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns	= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id			= "com.zaweather.com"
	version		= "1.0.0">

	<name>Weather South Africa</name>

	<description>
	Weather South Africa is a simple app that provides current and four day weather forecast for cities in South Africa.
	</description>

	<author href="http://facebook.com/weatherafrica">
		Donnie Ibiyemi
	</author>

	<gap:platforms>
		<gap:platform name="android" minVersion="2.1" />
	</gap:platforms>

<icon src="icon.png" />

 <gap:splash src="splash.png" />

<preference name="load-url-timeout" value="85000" />
<preference name="fullscreen" value="true" />

<access origin="*" subdomains="true" />

<gap:plugin name="ChildBrowser" />

</widget>